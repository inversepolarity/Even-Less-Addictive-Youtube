{

  "description": "Make youtube less addictive",
  "manifest_version": 2,
  "name": "Even-Less-Addictive-Youtube",
  "version": "1.00",
  "author":"surajsharma",
  "homepage_url": "https://github.com/inversepolarity/Even-Less-Addictive-Youtube",
  "icons": {
    "144": "icons/favicon4_144.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["browser-polyfill.js","contentscript.js"]
    }
  ],

  "browser_action": {
    "default_icon": "icons/favicon4_144.png",
    "default_title": "Less Addictive Youtube",
    "default_popup": "options/options.html"
  },

  "permissions": [
    "storage"
  ],

  "browser_specific_settings": {
  "gecko": {
    "id": "test@gmail.com"
  }
}
}

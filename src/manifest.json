{
  "description": "Nirvana for YouTube",
  "manifest_version": 3,
  "name": "ZYT",
  "version": "1.1.5",
  "author": "surajsharma",
  "homepage_url": "https://evenzero.in/experiments",
  "icons": {
      "144": "icons/favicon4_144.png"
  },

  "background": {
      "service_worker": "background.js"
  },

  "content_scripts": [
      {
          "matches": ["*://*.youtube.com/*"],
          "js": ["browser-polyfill.js", "defaultSettings.js", "emoji.js", "contentscript.js"],
          "run_at": "document_start"
      }
  ],

  "action": {
      "default_icon": "icons/favicon4_144.png",
      "default_title": "Nirvana for YouTube",
      "default_popup": "options/options.html"
  },

  "permissions": ["storage", "tabs", "scripting", "activeTab"],
  "host_permissions": ["*://*.youtube.com/*"]
}